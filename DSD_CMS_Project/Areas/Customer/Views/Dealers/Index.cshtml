@model List<Dealers>

<div class="card box-shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Manage Dealers</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">

        <div class="row pb-3">
            <div class="col-6">
                <h3 class="text-primary">
                    Dealers list
                </h3>
            </div>

            <div class="col-6 text-end">
                <a asp-controller="Dealers" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  New Dealer
                </a>
            </div>
        </div>

        <table id="dealersData" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Dealer Name</th>
                    <th>Dealer Location</th>
                    <th>Contact No</th>
                    <th> </th>
                </tr>
            </thead>
        </table>
    </div>
</div>



@section Scripts{
    <script src="~/js/dealers.js"></script>
}

