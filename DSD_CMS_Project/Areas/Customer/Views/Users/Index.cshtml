@model List<Users>

<div class="card box-shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">User Details</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">

        <div class="row pb-3">
            <div class="col-6">
                <h4 class="text-primary">
                    Manage Users
                </h4>
            </div>

            <div class="col-6 text-end">
                <a asp-controller="Users" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  New User
                </a>
            </div>
        </div>

        <table id="userData" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Dealer</th>
                    <th>Showroom</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email Address</th>
                    <th>DOB</th>
                    <th>Status</th>

                    <th> </th>
                </tr>
            </thead>
        </table>
    </div>
</div>


@section Scripts{
    <script src="~/js/user.js"></script>

}