@model List<Devices>

<div class="card box-shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Device Details</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">

        <div class="row pb-3">
            <div class="col-6">
                <h3 class="text-primary">
                    Devices list
                </h3>
            </div>

            <div class="col-6 text-end">
                <a asp-controller="Devices" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  New Device
                </a>
            </div>
        </div>

        <table id="devicesData" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Dealer
                    </th>
                    <th>
                        Showroom
                    </th>
                    <th>
                        Device Name
                    </th>
                    <th>
                        Device UDID
                    </th>
                    <th> </th>
                </tr>
            </thead>
        </table>
    </div>
</div>



@section Scripts{
    <script src="~/js/devices.js"></script>
}