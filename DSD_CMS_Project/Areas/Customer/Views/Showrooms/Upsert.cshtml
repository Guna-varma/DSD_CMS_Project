@model DSD_CMS.Model.ViewModels.ShowroomsVm

<div class="card box-shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Showrooms.Id != 0 ? "Update" : "Create") Showroom</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Showrooms.Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3" style="color: black">

                        <div class="row pb-2">
                            <h2 class="text-primary">@(Model.Showrooms.Id != 0 ? "Update" : "Create") Showroom</h2>
                            <hr />
                        </div>
                        @*<div asp-validation-summary="All"></div>*@

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Showrooms.ShowroomName" class="form-control border-0 shadow" />
                            <label asp-for="Showrooms.ShowroomName" class="ms-2"></label>
                            <span asp-validation-for="Showrooms.ShowroomName" class="text-danger"></span>
                        </div>


                        <div class="form-floating py-2 col-12">
                            <input asp-for="Showrooms.ShowroomLocation" class="form-control border-0 shadow" />
                            <label asp-for="Showrooms.ShowroomLocation" class="ms-2"></label>
                            <span asp-validation-for="Showrooms.ShowroomLocation" class="text-danger"></span>
                        </div>


                        <div class="form-floating py-2 col-12">
                            <input asp-for="Showrooms.ContactNo" class="form-control border-0 shadow" />
                            <label asp-for="Showrooms.ContactNo" class="ms-2"></label>
                            <span asp-validation-for="Showrooms.ContactNo" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Showrooms.FaxNo" class="form-control border-0 shadow" />
                            <label asp-for="Showrooms.FaxNo" class="ms-2"></label>
                            <span asp-validation-for="Showrooms.FaxNo" class="text-danger"></span>
                        </div>


                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.Showrooms.DealerId" asp-items="@Model.DealersList" class="form-select border-0 shadow">
                                <option disabled selected>--select Dealer--</option>
                            </select>
                            <label asp-for="Showrooms.DealerId" class="ms-2"></label>
                            <span asp-validation-for="Showrooms.DealerId" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Showrooms.Devices" class="form-control border-0 shadow" />
                            <label asp-for="Showrooms.Devices" class="ms-2"></label>
                            <span asp-validation-for="Showrooms.Devices" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Showrooms.Email" class="form-control border-0 shadow" />
                            <label asp-for="Showrooms.Email" class="ms-2"></label>
                            <span asp-validation-for="Showrooms.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Showrooms.AddressLine1" class="form-control border-0 shadow" />
                            <label asp-for="Showrooms.AddressLine1" class="ms-2"></label>
                            <span asp-validation-for="Showrooms.AddressLine1" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Showrooms.AddressLine2" class="form-control border-0 shadow" />
                            <label asp-for="Showrooms.AddressLine2" class="ms-2"></label>
                            <span asp-validation-for="Showrooms.AddressLine2" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Showrooms.City" class="form-control border-0 shadow" />
                            <label asp-for="Showrooms.City" class="ms-2"></label>
                            <span asp-validation-for="Showrooms.City" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Showrooms.State" class="form-control border-0 shadow" />
                            <label asp-for="Showrooms.State" class="ms-2"></label>
                            <span asp-validation-for="Showrooms.State" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="Showrooms.Country" class="form-control border-0 shadow" />
                            <label asp-for="Showrooms.Country" class="ms-2"></label>
                            <span asp-validation-for="Showrooms.Country" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <select asp-for="Showrooms.Region" class="form-select border-0 shadow">
                                <option value="">--Select Region--</option>
                                <option value="East">East</option>
                                <option value="West">West</option>
                                <option value="North">North</option>
                                <option value="South">South</option>
                            </select>
                            <label asp-for="Showrooms.Region" class="ms-2"></label>
                            <span asp-validation-for="Showrooms.Region" class="text-danger"></span>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Showrooms.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>

                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Showrooms" asp-action="Index" class="btn btn-outline-secondary form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
