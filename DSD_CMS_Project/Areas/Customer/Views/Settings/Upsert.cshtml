@model DSD_CMS.Model.Models.Settings

<div class="card box-shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id != 0 ? "Update" : "Create") Setting</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-12">
                    <div class="border p-3" style="color: black">

                        <div class="row pb-2">
                            <h3 class="text-primary">@(Model.Id != 0 ? "Update" : "Create") Setting</h3>
                            <hr />
                        </div>

                        
                        <div class="form-floating py-2 col-12">
                            <input asp-for="PropertyName" class="form-control border-0 shadow" />
                            <label asp-for="PropertyName" class="ms-2"></label>
                            <span asp-validation-for="PropertyName" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="PropertyValue" class="form-control border-0 shadow" />
                            <label asp-for="PropertyValue" class="ms-2"></label>
                            <span asp-validation-for="PropertyValue" class="text-danger"></span>
                        </div>


                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create</button>

                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Settings" asp-action="Index" class="btn btn-outline-secondary form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

    <script>
        function togglePasswordVisibility(element) {
            const passwordField = document.querySelector(element.getAttribute('toggle'));
            const eyeIcon = element.querySelector('i');

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                eyeIcon.classList.remove('bi-eye');
                eyeIcon.classList.add('bi-eye-slash');
            } else {
                passwordField.type = 'password';
                eyeIcon.classList.remove('bi-eye-slash');
                eyeIcon.classList.add('bi-eye');
            }
        }


    </script>
}
